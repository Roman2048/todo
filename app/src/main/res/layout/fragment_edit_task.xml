<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
        android:id="@+id/fragment_edit_task_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/fragment_edit_task_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/fragment_edit_task_top_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginStart="24dp"
            android:text="Task details" />

    </com.google.android.material.appbar.MaterialToolbar>

    <EditText
        android:id="@+id/edit_task_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/fragment_edit_task_toolbar" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/fragment_edit_task_set_time_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@null"
        android:contentDescription="Set time"
        android:src="@drawable/ic_outline_access_time_24"
        android:text="Time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_task_edit_text" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/fragment_edit_task_done_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_edit_task_set_time_image_button"
        app:layout_constraintStart_toEndOf="@id/fragment_edit_task_set_time_image_button"
        app:layout_constraintTop_toTopOf="@id/fragment_edit_task_set_time_image_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_task_delete_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Delete"
        app:icon="@drawable/ic_outline_delete_24"
        app:layout_constraintBottom_toBottomOf="@id/fragment_edit_task_done_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_edit_task_done_checkbox" />

</androidx.constraintlayout.widget.ConstraintLayout>
