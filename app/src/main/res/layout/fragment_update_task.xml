<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/edit_task_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:text="" />

    <Button
        android:id="@+id/edit_task_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_task_edit_text"
        android:layout_margin="16dp"
        android:text="Save" />

    <Button
        android:id="@+id/edit_task_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/edit_task_save_button"
        app:layout_constraintTop_toBottomOf="@id/edit_task_edit_text"
        android:layout_margin="16dp"
        android:text="Delete" />

    <Button
        android:id="@+id/edit_task_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/edit_task_delete_button"
        app:layout_constraintTop_toBottomOf="@id/edit_task_edit_text"
        android:layout_margin="16dp"
        android:text="Back" />

    <Button
        android:id="@+id/edit_task_undone_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/edit_task_back_button"
        app:layout_constraintTop_toBottomOf="@id/edit_task_edit_text"
        android:layout_margin="16dp"
        android:text="Undone" />

</androidx.constraintlayout.widget.ConstraintLayout>
